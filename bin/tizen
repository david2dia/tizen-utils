#!/usr/bin/env node

var tizen = require('../lib/tizen-utils');
var log = require('../lib/log');
var method = process.argv[2];
var args = process.argv.slice(3);

if (tizen[method]) {
    tizen[method](args[0], args[1]);
} else {
    log('Usage: tizen [method] [arguments]');
    log('\t tizen init - create config.xml');
    log('\t tizen wgt - create wgt file');
    log('\t tizen install - install app/wgt on target');
    log('\t tizen list - list all installed apps on target with wgtIds');
    log('\t tizen run wgtId - start running app');
    log('\t tizen close wgtId - stop running app');
    log('\t tizen uninstall wgtId - uninstall wgt from target');
}
